<%- include('partials/header'); %>
<body>
  <%- include('partials/navbar'); %>
  <div class="container">
    <hr />
    <h1><%=pergunta.titulo %></h1>
    <p><%=pergunta.descricao %></p>
    <hr />

    <form method="post" action="/responder">
      <h3>Responda</h3>
      <label for="">Resposta:</label>
      <textarea
        placeholder="Digite sua resposta animal"
        class="form-control"
        name="corpo"
      ></textarea>
      <br />
      <button type="submit" class="btn btn-secondary">Responder</button>
      <input type="text" name="pergunta" value="<%=pergunta.id %>" hidden />
    </form>
    <hr />
    <h3>Respostas</h3>
    <% respostas.forEach(resposta => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <p><%=resposta.corpo %></p>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer'); %>
